<form action="<%= action %>" method="<%= method %>">
  <%
    if (typeof(page) === 'undefined'){
      page = {
        title: '',
        body: '',
        markup: 'html',
        in_nav: true
      }
    }
  %>

  <div class='form-group'>
    <!-- radio buttons for markdown or html -->
    <div class="radio-inline">
      <label>
        <input type="radio" name="markup" value="markdown" <%= page.markup === 'markdown' ? "checked" : "" %>>
        Markdown + HTML
      </label>
    </div>
    <div class="radio-inline">
      <label>
        <input type="radio" name="markup" value="html" <%= page.markup === 'html' ? "checked" : "" %>>
        Only HTML
      </label>
    </div>
  </div>
  <div class='form-group'>
    <!-- radio buttons for markdown or html -->
    <div class="radio-inline">
      <label>
        <input type="radio" name="in_nav" value="true" <%= page.in_nav ? 'checked' : '' %>>
        Show in Navigation
      </label>
    </div>
    <div class="radio-inline">
      <label>
        <input type="radio" name="in_nav" value="false" <%= page.in_nav ? '' : 'checked' %>>
        Hide from Nav.
      </label>
    </div>
  </div>
  <div class='form-group'>
    <input name='title' value='<%= page.title %>' placeholder='Title' type='text' class='form-control' autofocus>
  </div>
  <div class='form-group'>
    <!-- <div id='epiceditor'></div> -->
    <%- partial('ghost_editor', {textarea_name: 'content', textarea_value: page.content}) %>
  </div>

  <br>
  <div class='control-group'>
    <input type='submit' value='Publish Page' class='btn btn-lg'>
  </div>
  <div class='control-group'>
    <!-- hidden inputs -->
    <input type='hidden' name='_csrf' value='<%= _csrf %>'>
  </div>
</form>