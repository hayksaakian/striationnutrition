<form action="<%= action %>" method="<%= method %>">
  <%
    if (typeof(article) === 'undefined'){
      article = {
        title: '',
        body: '',
        pinned: false
      }
    }
  %>

  <div class='form-group'>
    <div class="radio radio-inline">
      <label>
        <input type="radio" name="pinned" value="true" <%= article.pinned ? 'checked' : '' %>>
        Yes
      </label>
    </div>
    <div class="radio radio-inline">
      <label>
        <input type="radio" name='pinned' value="false" <%= article.pinned ? '' : 'checked' %>>
        No
      </label>
    </div>
  </div>
  <div class='form-group'>
    <input name='title' value='<%= article.title %>' placeholder='Title' type='text' class='form-control' autofocus>
  </div>
  <div class='form-group'>
    <div id='epiceditor'></div>
    <textarea name='body' placeholder='Body' type='text' rows='20' class='form-control' id='markdown_field'><%= article.body %></textarea>
  </div>

  <br>
  <div class='control-group'>
    <input type='submit' value='Publish Article' class='btn btn-lg'>
  </div>
  <div class='control-group'>
    <!-- hidden inputs -->
    <input type='hidden' name='_csrf' value='<%= _csrf %>'>
  </div>
</form>